{
  "manifest_version": 3,
  "name": "Yami – Fuzzy Finder for Bookmarks",
  "version": "1.0",
  "description": "Quickly fuzzy search and open bookmarks with a Raycast-like interface.",
  "author": "Marc Güell Segarra",
  "homepage_url": "https://github.com/mguellsegarra/yami-bookmark-fuzzy-finder",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["bookmarks", "commands", "activeTab", "scripting", "favicon"],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Open bookmark fuzzy finder"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ]
}
